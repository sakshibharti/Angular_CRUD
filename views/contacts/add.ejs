<% include ../partials/header.ejs %>

<!--Content for the Add page-->
<div class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <h1 style="margin-top:35px"><b><%=title%></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="">First Name</label>
                    <input type="text" placeholder="Enter First Name"
                    class="form-control" id="FirstNameTextField" name="FirstNameTextField" required>
                </div>

                <div class="form-group">
                    <label for="">Last Name</label>
                    <input type="text" placeholder="Enter Last Name"
                    class="form-control" id="LastNameTextField" name="LastNameTextField" required>
                </div>

                <div class="form-group">
                        <label for="">Contact Number</label>
                        <input type="text" placeholder="Enter Contact"
                        class="form-control" id="ContactTextField" name="Contact" required>
                    </div>

                    <div class="form-group">
                        <label for="">Email Address</label>
                        <input type="text" placeholder="Enter Email"
                        class="form-control" id="EmailTextField" name="Email" required>
                    </div>

                    <div class="form-group">
                        <label for="">Message</label>
                        <input type="text" placeholder="Type a Message" style="height:100px"
                        class="form-control" id="MessageTextField" name="Message" required>
                    </div>
                    <a style="margin-left:0%" class="btn btn-primary" href="/contact-list/add" role="button" ><b><i class="fa fa-check-square-o" ></i>Submit</a>
                    
            </form>
        </div>
    </div>
</div>


